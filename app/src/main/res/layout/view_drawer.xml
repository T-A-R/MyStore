<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cont"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/logo_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:layout_marginRight="@dimen/_40sdp"
                    android:src="@drawable/logo" />

                <RelativeLayout
                    android:id="@+id/menu1_cont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="16dp">

                    <ImageButton
                        android:id="@+id/menu1"
                        style="@style/ButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:maxLines="1"
                        android:text="Menu 1"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:background="@drawable/home_white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_36sdp"
                            android:gravity="center"
                            android:text="Menu 1"
                            android:textColor="@android:color/background_light"
                            android:textSize="@dimen/_12ssp" />

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/menu2_cont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp">

                    <ImageButton
                        android:id="@+id/menu2"
                        style="@style/ButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:maxLines="1"
                        android:text="Menu 2"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:background="@drawable/sync_white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_36sdp"
                            android:gravity="center"
                            android:text="Menu 2"
                            android:textColor="@android:color/background_light"
                            android:textSize="@dimen/_12ssp" />

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/menu3_cont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp">

                    <ImageButton
                        android:id="@+id/menu3"
                        style="@style/ButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:maxLines="1"
                        android:text="Menu 3"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:background="@drawable/settings_white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_36sdp"
                            android:gravity="center"
                            android:text="Menu 3"
                            android:textColor="@android:color/background_light"
                            android:textSize="@dimen/_12ssp" />

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/menu4_cont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp">

                    <ImageButton
                        android:id="@+id/menu4"
                        style="@style/ButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:maxLines="1"
                        android:text="Menu 4"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:background="@drawable/checkbox_white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_36sdp"
                            android:gravity="center"
                            android:text="Menu 4"
                            android:textColor="@android:color/background_light"
                            android:textSize="@dimen/_12ssp" />

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/menu5_cont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp">

                    <ImageButton
                        android:id="@+id/menu5"
                        style="@style/ButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:maxLines="1"
                        android:text="Menu 5"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:background="@drawable/about_white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_36sdp"
                            android:gravity="center"
                            android:text="Menu 5"
                            android:textColor="@android:color/background_light"
                            android:textSize="@dimen/_12ssp" />

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/exit_cont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp">

                    <ImageButton
                        android:id="@+id/exit_btn"
                        style="@style/ButtonRed"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:maxLines="1"
                        android:text="Exit"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:background="@drawable/logout_white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_36sdp"
                            android:gravity="center"
                            android:text="Exit"
                            android:textColor="@android:color/background_light"
                            android:textSize="@dimen/_12ssp" />

                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</RelativeLayout>